# authorize polkit-gnome
exec lxpolkit
#exec --no-startup-id clipman
#exec --no-startup-id xfsettingsd

# load gtk themes with script
exec_always --no-startup-id ~/.config/sway/scripts/import-gsettings.sh
# start rotate background
exec_always --no-startup-id ~/.config/sway/scripts/background-rotator.sh

exec swayidle \
   timeout 900 'swaylock -f -c 000000' \
   timeout 1800 'swaymsg "output * dpms off"' \
      resume 'swaymsg "output * dpms on"' \
   before-sleep 'swaylock -f -c 000000'

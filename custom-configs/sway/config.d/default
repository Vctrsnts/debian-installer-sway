# Configuración básica
set $mod Mod4
set $gnome-schema org.gnome.desktop.interface
set $term wezterm
set $menu rofi -show drun -modi drun -line-padding 4 -hide-scrollbar -show-icons

# Ejecutar fondo dinámico
exec ~/.config/sway/scripts/background-rotator.sh

# wallpaper
output * background ~/.config/backgrounds/Wallpaper_01.jpg fill

bindsym $mod+Return exec $term

# === THEME SETTINGS ===
font pango:Cantarell 11

# Atajo para lanzar rofi (Mod+D)
bindsym $mod+d exec $menu

# === RULES ===
for_window [app_id="hitty"] floating enable, resize set 1280 720

# === WINDOW ===
bindsym $mod+q kill
bindsym $mod+Shift+r reload; exec notify-send 'sway' 'Restarted'

# === WAYBAR ===
bar {
  swaybar_command waybar
}

exec_always {
    gsettings set $gnome-schema gtk-theme 'Nordic-Dark'
    gsettings set $gnome-schema icon-theme 'Colloid-Nord-Dark'
    gsettings set $gnome-schema cursor-theme 'Adwaita'
    gsettings set $gnome-schema font-name 'Sans 10'
}

{
  "layer": "top",
  "position": "top",
  "height": 28,
  "spacing": 4,

  // Orden de módulos
  "modules-left": ["sway/workspaces", "sway/mode"],
  "modules-center": [],
  "modules-right": [
    "custom/audio",
    "network",
    "custom/system",
    "clock",
    "tray",
    "custom/notifications"
  ],

  // --- Configuración de módulos ---

  "sway/workspaces": {
    "disable-scroll": true,
    "all-outputs": false,
    "format": "{name}"
  },

  "sway/mode": {
    "format": " {mode}"
  },

  "custom/audio": {
    "format": "{}",
    "exec": "~/.config/sway/scripts/audio.sh",
    "interval": 2,
    "on-click": "pavucontrol"
  },

  "network": {
    "format-wifi": " {signalStrength}%",
    "format-ethernet": " {ifname}",
    "tooltip-format": "{ifname}: {ipaddr}",
    "format-disconnected": "󰈀 Sin red",
    "on-click-right": "bash ~/.config/rofi/wifi_menu/rofi_wifi_menu"
  },

  "custom/system": {
    "format": "{}",
    "exec": "~/.config/sway/scripts/system.sh",
    "interval": 5,
    "on-click": "foot -e btm"
  },

  "clock": {
    "format": "{:%d %b %H:%M}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
  },

  "tray": {
    "icon-size": 18,
    "spacing": 10
  },

  "custom/notifications": {
    "format": "",
    "exec": "maki-notification --status",
    "on-click": "maki-notification --popup",
    "interval": 5
  }
}
